{
    "name": "nearata/flarum-ext-minecraft-avatars",
    "description": "Allow users to use the head of a Minecraft skin as avatar.",
    "keywords": [
        "flarum",
        "minecraft"
    ],
    "type": "flarum-extension",
    "license": "Unlicense",
    "support": {
        "issues": "https://github.com/Nearata/flarum-ext-minecraft-avatars/issues",
        "source": "https://github.com/Nearata/flarum-ext-minecraft-avatars",
        "forum": "https://discuss.flarum.org/d/24468"
    },
    "require": {
        "php": "^8.0",
        "flarum/core": "^1.7",
        "guzzlehttp/guzzle": "^7.4",
        "illuminate/http": "^8.0"
    },
    "require-dev": {
        "laravel/pint": "^1.5.0"
    },
    "authors": [
        {
            "name": "Nearata",
            "email": "nearata@protonmail.com",
            "role": "Developer"
        }
    ],
    "autoload": {
        "psr-4": {
            "Nearata\\MinecraftAvatars\\": "src/"
        }
    },
    "extra": {
        "flarum-extension": {
            "title": "Minecraft Avatars",
            "category": "feature",
            "icon": {
                "image": "icon.png",
                "backgroundColor": "transparent",
                "backgroundSize": "cover",
                "backgroundPosition": "center"
            }
        }
    },
    "scripts": {
        "format": "pint src"
    }
}
